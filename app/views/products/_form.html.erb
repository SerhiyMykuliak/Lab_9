<%= form_with(model: product, class: "contents") do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-700 px-4 py-3 rounded-md mt-3 border border-red-200 font-medium">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul class="list-disc ml-6 mt-2">
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name, class: "block font-semibold mb-1" %>
    <%= form.text_field :name, 
      class: [
        "block w-full px-3 py-2 rounded-md shadow-sm border transition-colors duration-150",
        {"border-gray-400 focus:border-blue-600 focus:outline-none": product.errors[:name].none?},
        {"border-red-500 focus:border-red-600 focus:outline-none": product.errors[:name].any?}
      ] %>
  </div>

  <div class="my-5">
    <%= form.label :price, class: "block font-semibold mb-1" %>
    <%= form.text_field :price, 
      class: [
        "block w-full px-3 py-2 rounded-md shadow-sm border transition-colors duration-150",
        {"border-gray-400 focus:border-blue-600 focus:outline-none": product.errors[:price].none?},
        {"border-red-500 focus:border-red-600 focus:outline-none": product.errors[:price].any?}
      ] %>
  </div>

  <div>
    <%= form.submit "Save", class: "w-full sm:w-auto bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-md px-4 py-2 cursor-pointer transition-colors duration-150" %>
  </div>
<% end %>
